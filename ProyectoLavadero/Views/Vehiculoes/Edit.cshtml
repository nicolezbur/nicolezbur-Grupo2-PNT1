    </div>
</div>

<div>
    <a asp-action="Index" asp-route-idUsuario="@ViewData["IdUsuario"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
